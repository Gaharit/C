#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	int a[5];
	int i, temp, n = 5, value, direct;
	printf("Enter %d numbers for the array: ", n);
	for (i = 0; i < n; i++)
		scanf("%d", &a[i]);
	printf("\nEnter value of displacement: ");
	scanf("%d", &value);
	printf("\nEnter '1' if you want to displace to right \nor '0' if you want to displace to left ");
	scanf("%d", &direct);
	if (direct == 1)
	{
		for (; value > 0; value--)
		{
			temp = a[n - 1];
			for (i = n - 1; i > 0; i--)
				a[i] = a[i - 1];
			a[0] = temp;
		}
	}
	else
	{
		for (; value > 0; value--)
		{
			temp = a[0];
			for (i = 0; i < n - 1; i++)
				a[i] = a[i + 1];
			a[n - 1] = temp;
		}
	}
	printf("Array is: ");
	for (i = 0; i < n; i++)
		printf("%d ", a[i]);
	printf("\n");
}
